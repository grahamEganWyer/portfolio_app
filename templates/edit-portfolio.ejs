                        <!-- other list generates here -->
                        
                        </ul>
                    </div>
                </div>
            </section>
        </div>
    </div>




<div class="pop-up">
    <!-- ABOUT -->

    <div class="edit-about-div">

        <form action="/api/portfolio/about" method="put" class="about-form">

            <h2 class="heading"> About You</h2>

            <input type="text" placeholder="Location" class="user_location" name="user-location">

            <input type="text" placeholder="Welcome Bio" class="user_welcome" name="user-welcome">

            <input type="text" placeholder="Contact Pitch" class="user-pitch" name="user-pitch">


            <button>Next</button>


            <form action="/api/portfolio/about" method="put" class="about-form">

                <h2 class="heading"> About You</h2>
    
                <input type="text" placeholder="Location" class="user_location" name="user-location">
    
                <input type="text" placeholder="Welcome Bio" class="user_welcome" name="user-welcome">
    
                <input type="text" placeholder="Contact Pitch" class="user-pitch" name="user-pitch">
    
    
                <button>Update</button>
    
            </form>

        <form action=""></form>
    </div>

    <!-- CONTACT -->
    

    <div class="edit-contact-div">

        <form action="/api/portfolio/contact" method="put" class="contact-form">

            <h2 class="heading">Your Contacts</h2>

            <input type="text" placeholder="Git Hub URL" class="github-url" name="github-url">

            <input type="text" placeholder="LinkedIn URL" class="linkedin-url" name="linkedin-url">

            <input type="text" placeholder="Instagram URL" class="instagram-url" name="instagram-url">

            <input type="text" placeholder="Twitter URL" class="twitter-url" name="twitter-url">


            <button>Update</button>

        </form> 
    </div> 

    <!-- PROJECT -->
    

    <div class="edit-project-div">


        <form action="/api/portfolio/project" method="put" class="project-form">

            <h2 class="heading">Your Projects</h2>

            <input type="text" placeholder="Project Heading" class="project_heading" name="project-heading">

            <input type="text" placeholder="Project Year" class="project_year" name="project-year">

            <input type="text" placeholder="Project Description" class="project_description" name="project-description">

            <input type="text" placeholder="Project URL" class="project-url" name="project-url">

            <button>Update</button>
            <button>Delete</button>

        </form>
    </div>

    <!-- SKILLS -->
    

    <div class="edit-skill-div">

        <form action="/api/portfolio/skill" method="put" class="skill-form">

            <h2 class="heading">Your Skills</h2>

            <h3 class="heading">Front End</h3>
            <input type="text" placeholder="Skill Heading" class="skills" name="skills">
            <h3>enter your skills seperated by commas</h3>
            <input type="text" placeholder="Skills" class="skills" name="skills">

            <button>Delete</button>
            <button>Update</button>
        </form>

        <form action="/api/portfolio/skill" method="post" class="skill-form">

            <h2 class="heading">Your Skills</h2>

            <h3 class="heading">Front End</h3>
            <input type="text" placeholder="Skill Heading" class="skills" name="skills">
            <h3>enter your skills seperated by commas</h3>
            <input type="text" placeholder="Skills" class="skills" name="skills">

            <button>Add</button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/edit_portfolio.js"></script>

</body>
</html>